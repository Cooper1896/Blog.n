#comment-quote-block
  display: none
  margin: 1rem 0
  padding: 1rem
  background: var(--anzhiyu-card-bg)
  border-left: 5px solid var(--anzhiyu-main)
  border-radius: 8px
  position: relative
  animation: slideIn 0.3s ease-in-out

  .comment-quote-content
    color: var(--anzhiyu-fontcolor)
    font-size: 0.95rem
    line-height: 1.6
    white-space: pre-wrap
    overflow: hidden
    text-overflow: ellipsis
    display: -webkit-box
    -webkit-line-clamp: 3
    -webkit-box-orient: vertical

  .comment-quote-remove
    position: absolute
    top: 0.5rem
    right: 0.5rem
    cursor: pointer
    color: var(--anzhiyu-secondtext)
    transition: all 0.3s

    &:hover
      color: var(--anzhiyu-main)

@keyframes slideIn
  from
    opacity: 0
    transform: translateY(-10px)
  to
    opacity: 1
    transform: translateY(0)
